@model IEnumerable<StudentTeacherCourse.Models.CourseModel>

@{
    ViewBag.Title = "TeacherCourseView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TeacherCourseView</h2>

<p>
    @Html.ActionLink("Create New", "CreateCourse")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfStudents)
        </th>
        /
        <th>
            @Html.DisplayNameFor(model => model.MaxNumberOfStudents)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfStudents)
        </td>
        /
        <td>
            @Html.DisplayFor(modelItem => item.MaxNumberOfStudents)
        </td>

        <td>
            @Html.ActionLink("View Course", "ViewSingleCourse", new {Id = item.CourseId}) |
            @Html.ActionLink("Delete", "DeleteCourse", new {Id = item.CourseId})
        </td>
    </tr>
}

</table>
